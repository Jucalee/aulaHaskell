<h1>Listagem de questões</h1>
            
<table>
	<tr>
    	<th>ID</th>
        <th>Questão</th>
        <th>Alternativa</th>
   	</tr>
   	$forall (Entity _ pergunta, Entity _ alternativa) <- pergunta
    <tr>
    	<td>#{perguntaId pergunta}</td>
      	<td>#{perguntaDescricao pergunta}</td>
      	<td>
      		#{Data.Text.concat $ intersperse "\b " (Prelude.map alternativaDescricao $ sort $ alternativa)}
		</td>
    </tr>
</table>